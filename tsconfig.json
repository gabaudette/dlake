{
	"compilerOptions": {
		"target": "ES2022",
		"module": "ESNext",
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"strict": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"declaration": true,
		"outDir": "dist",
		"rootDir": ".",
		"sourceMap": true,
		"resolveJsonModule": true,
		"allowImportingTsExtensions": false
	},
	"include": ["**/*.ts"],
	"exclude": ["node_modules", "dist"]
}
